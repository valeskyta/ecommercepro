<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Price</th>
      <th>Category</th>
      <th>Reviews</th>

      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
        <td><%= product.price %></td>
        <td><%= product.category %></td>
        <td><%= product.reviews.count %></td>
        <td><%= image_tag product.photo.thumb %></td>
        <td><%= link_to 'Show', product %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>



